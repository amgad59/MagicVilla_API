@model IEnumerable<VillaNumberDTO>


<div class="container">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">
				Category List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="VillaNumber" asp-action="CreateVillaNumber" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> Create New Category
			</a>
		</div>
	</div>
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>
					villa number
				</th>
				<th>
					villa name
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var a in Model)
			{
				<tr>
					<td>@a.VillaNo</td>
					<td>@a.Villa.Name</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="VillaNumber" asp-action="UpdateVillaNumber" asp-route-villaNo="@a.VillaNo" class="btn btn-primary mx-2">
								<i class="bi bi-pencil-square"></i> Edit
							</a>

							<a asp-controller="VillaNumber" asp-action="DeleteVillaNumber" asp-route-villaNo="@a.VillaNo" class="btn btn-danger mx-2">
								<i class="bi bi-trash"></i> Delete
							</a>
						</div>
					</td>
				</tr>

			}
		</tbody>
	</table>
</div>