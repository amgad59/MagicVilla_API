@model IEnumerable<VillaDTO>


<div class="container">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">
				Category List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Villa" asp-action="CreateVilla" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> Create New Category
			</a>
		</div>
	</div>
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>
					Name
				</th>
				<th>
					Occupancy
				</th>
				<th>
					price
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var a in Model)
			{
				<tr>
					<td>@a.Name</td>
					<td>@a.Occupancy</td>
					<td>@a.Rate.ToString("c")</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Villa" asp-action="UpdateVilla" asp-route-villaId="@a.Id" class="btn btn-primary mx-2">
								<i class="bi bi-pencil-square"></i> Edit
							</a>

							<a asp-controller="Villa" asp-action="DeleteVilla" asp-route-villaId="@a.Id" class="btn btn-danger mx-2">
								<i class="bi bi-trash"></i> Delete
							</a>
						</div>
					</td>
				</tr>

			}
		</tbody>
	</table>
</div>